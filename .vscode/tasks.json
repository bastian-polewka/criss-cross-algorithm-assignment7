{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Run tests",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "${workspaceFolder}/tests/*.cpp",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-W"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Run doctest tests"
    }
  ],
  "version": "2.0.0"
}
